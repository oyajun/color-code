<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
  <name>Color Code</name>
  <summary>Color Code to Resistance Value</summary>
  <description>
    <p>
      Can't you understand Color Code? This app converts to the resistance value from the color
      code.
    </p>
    <ul>
      <li>Supports 4, 5 and 6 bands</li>
      <li>Can copy a results</li>
      <li>Supports a narrow window</li>
    </ul>
  </description>
  <branding>
    <color type="primary" scheme_preference="light">#edd400</color>
    <color type="primary" scheme_preference="dark">#613583</color>
  </branding>
  <id>com.oyajun.ColorCode.desktop</id>
  <launchable type="desktop-id">com.oyajun.ColorCode.desktop</launchable>
  <developer id="com.oyajun">
