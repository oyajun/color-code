{
    "app-id" : "com.oyajun.ColorCode",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "color-code",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	{
            "name" : "blueprint-compiler",
            "builddir" : true,
            "buildsystem" : "meson",
            "cleanup" : [
                "*"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/jwestman/blueprint-compiler.git",
                    "tag" : "v0.14.0"
                }
            ]
        },

        {
            "name" : "color-code",
            "builddir" : true,
            "buildsystem" : "meson",
            "run-tests" : true,
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "./"
                }
            ]
        }
    ]
}
